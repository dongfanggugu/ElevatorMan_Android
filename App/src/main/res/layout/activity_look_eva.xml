<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_order"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下是您的评分："
        android:layout_margin="40dp"
        android:layout_gravity="center_horizontal"
        />
    <RatingBar android:id="@+id/ratingbar2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:rating="4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下是用户意见："
        android:layout_margin="40dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


    <EditText
        android:id="@+id/et_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alarm_info"
        android:hint="@string/alarm_remark"
        android:layout_marginLeft="5dp"
        android:gravity="top"
        android:layout_weight="1"
        android:maxLines="3"
        android:lines="3"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/color_easy_alarm_text"
        />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>



</LinearLayout>